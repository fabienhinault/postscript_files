% arg stack: all strings in columns iRow, iCol = 0,0 , 1,0 , ... , nRow-1,0 , 1,0, ...
% 0,0 first in stack, nRow-1,nCol-1 last
/fillTable {
  /iCol nbCol 1 sub def
  /iRow 0 def
  nbCol
  {
     nbRow 
     {
       iCol iRow placeText %eats 1 string in stack
       /iRow iRow 1 add def
     } repeat
     /iRow 0 def
     /iCol iCol 1 sub def
  } repeat
} def

